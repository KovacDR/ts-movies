

<form action="/movies" method="POST" class="form-inline" id="form">
    <div class="form-group mx-2">
        <label for="title" class="mr-2">Movie title:</label>
        <input type="text" id="title" name="title" class="form-control" required autocomplete="off" placeholder="Insert the title">
    </div>
    <div class="form-group mx-2">
        <label for="genre" class="mr-2">Genre: </label>
        <select name="genre" id="genre">
            <option value="none">-- Select the genre --</option>
            <option value="action">action</option>
            <option value="romance">romance</option>
            <option value="terror">terror</option>
            <option value="thriller">thriller</option>
            <option value="adventure">adventure</option>
        </select>
    </div>
    <div class="form-group mx-2">
        <label for="rating" class="mr-2">Rating:</label>
        <input type="number" id="rating" name="rating" min="0" max="10" value="0" class="form-control">
    </div>
    <button type="submit" class="btn btn-success btn-lg ml-5">
        Add movie
    </button>
</form>

<div class="row mt-5">
    {{#each data}}
        <div class="col-md-3">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <h2> {{title}} </h2>
                    <a href="/movies/delete/{{_id}}"><i class="fas fa-times text-danger"></i></a>
                </div>
                <div class="card-body d-flex justify-content-between">
                    <div>
                        <p class="h4 fw-bold">Genre:</p>
                        <p> {{genre}} </p>
                    </div>
                    <div>
                        <p class="h4 fw-bold">Rating:</p>
                        <p> {{rating}}/10 </p>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
<script src="js/main.js"></script>